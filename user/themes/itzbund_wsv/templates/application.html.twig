{% extends 'partials/base.html.twig' %}

{% do assets.addCss('theme://css/application.css', 98) %}

{% block content %}
    {% set theme = config.get('system.pages.theme') %}
    <div class="row">
        <div class="columns">
            {{ page.content|raw }}
            {% for module in page.collection() %}
                {{ module.content|raw }}
            {% endfor %}
            {% for include_twig in page.header.include_twigs %}
                {% include include_twig %}
            {% endfor %}
        </div>
    </div>
{% endblock %}
