{% set copyright_text = theme_var('footer.copyright.text') %}
{% set copyright_show_year = theme_var('footer.copyright.show_year') %}

{% if copyright_text %}
<div class="copyright">
    <p class="copyright_text">&copy; {% if copyright_show_year %}{{ "now"|date("Y") }} {% endif %}{{ copyright_text }}</p>
</div>
{% endif %}