{# Zeitbezug der Ressource #}
{% if hasTimeResource %}
    <div class="sub-section">
        <a class="anchor" {% if isTimeInDescription %}id="{{ hash_description }}_time_reference_record"{% else %}id="{{ hash_time }}_time_reference_record"{% endif %}></a>
        {{ hit_macros.render_group_title("SEARCH_DETAIL.TIME_REFERENCE_RECORD"|t) }}
{# Erstellung #}
        {{ hit_macros.render_label_text_row(getValueFromCodelist("502", "creation", lang), timeRefs.timeCreation ? timeRefs.timeCreation|date("d.m.Y")|e ) }}
{# Publikation #}
        {{ hit_macros.render_label_text_row(getValueFromCodelist("502", "publication", lang), timeRefs.timePublication ? timeRefs.timePublication|date("d.m.Y")|e ) }}
{# letzte Änderung #}
        {{ hit_macros.render_label_text_row(getValueFromCodelist("502", "revision", lang), timeRefs.timeRevision ? timeRefs.timeRevision|date("d.m.Y")|e ) }}
{# Status #}
        {{ hit_macros.render_label_text_row("SEARCH_DETAIL.T01_OBJECT_TIME_STATUS"|t, timeRefs.timeStatus, null, "text-capitalize") }}
{# Periodizität #}
        {{ hit_macros.render_label_text_row("SEARCH_DETAIL.T01_OBJECT_TIME_PERIOD"|t, timeRefs.timePeriod, null, "text-capitalize") }}
{# Intervall der Erhebung #}
        {{ hit_macros.render_label_text_row("SEARCH_DETAIL.T01_OBJECT_TIME_INTERVAL"|t, timeRefs.timeInterval) }}
{# Erläuterung zum Zeitbezug #}
        {{ hit_macros.render_label_text_row("SEARCH_DETAIL.T01_OBJECT_TIME_DESCR"|t, timeRefs.timeDescr) }}
    </div>
{% endif %}