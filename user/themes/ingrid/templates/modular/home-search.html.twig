<div class="banner home">
    <a id="search"></a>
    <div class="home-wrapper" style="background-image: url('{{ url('theme://images/template/drops-big.svg') }}');">
        <div class="row align-center">
            <div class="large-20 columns dark">
                {% if page.header.search_title %}
                    {% set title = "SEARCH.PORTLET_TITLE_1"|t %}
                    {% if title %}
                        <h1>{{ title }}</h1>
                    {% endif %}
                    <h1 class="green">{{ "SEARCH.PORTLET_TITLE_2"|t }}<span class="ic-ic-asterisc"></span></h1>
                    <div class="indent">
                        <span class="ic-ic-asterisc"></span>
                        <p class="intro">{{ "SEARCH.PORTLET_TITLE_3"|t }}</p>
                    </div>
                {% endif %}
                <form action="{{ page.find('/search').url }}?{{ uri.query }}" class="input-search" method="get" name="SearchForm" id="SearchForm">
                    {# keep other query parameters #}
                    {% for key, item in selected_facets %}
                        <input type='hidden' name='{{ key }}' value='{{ item }}'/>
                    {% endfor %}
                    <input type="text" class="input-search-field" placeholder="{{ "SEARCH.QUERY_INITIAL"|t }}" id="qrystr" name="q" value="{{ query }}">
                    <button class="button round hide-for-medium">
                        <span class="ic-ic-lupe"></span>
                    </button>
                    <button class="button large show-for-medium">
                        Suche
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
