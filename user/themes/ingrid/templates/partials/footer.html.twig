{% import 'macros/default_macros.html.twig' as macros %}

{% set footer_copyright_class = theme_var('footer.copyright_class') %}
{% set footer_menu_class = theme_var('footer.menu_class') %}
{% set menu_footer = theme_var('menu.footer') %}

<footer>
    <div class="footer">
        <hr>
        <div class="row">
            <div class="{{ footer_copyright_class }} columns">
                {% include 'partials/footer/logo.html.twig' %}
                {% include 'partials/footer/copyright.html.twig' %}
            </div>
            <div class="{{ footer_menu_class }} columns">
                <div class="footer-menu-entries" role="navigation" aria-label="Navigation Footer">
                    {{ macros.footer_nav_loop(menu_footer, pages) }}
                </div>
            </div>
        </div>
    </div>
</footer>