{% set print = theme_var('footer.print') %}
{% if print.enabled %}
<div class="button-print">
    <button id="print" class="button round social share" title="{{ "PRINT.TITLE"|t }}" onclick="window.print()">
        <span class="ic-ic-print"></span>
        <span class="text"></span>
    </button>
</div>
{% endif %}