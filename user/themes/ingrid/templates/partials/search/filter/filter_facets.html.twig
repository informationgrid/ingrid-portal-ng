{# @var facets_config \Grav\Plugin\FacetConfig[] #}
{# @var search_result \Grav\Plugin\SearchResult #}

<form action="{{ page.find('/search').url }}?{{ uri.query }}&q={{ query }}" method="post" name="updateFacets" id="updateFacets">
    <div id="facets">
        <div class="accordion accordion-filter-group filter" data-accordion="" data-allow-all-closed="true" role="tablist">
            <div class="accordion-item accordion-item-filter-group" data-accordion-item="">
                <a href="#" class="accordion-title accordion-title-filter-group hide-for-large" role="tab"
                   id="facet-content-accordion-label" aria-expanded="false" aria-selected="false"
                   aria-controls="facet-content-accordion"><span>Filter</span></a>
                <div class="accordion-content filter-wrapper filter-wrapper-shadowless" data-tab-content=""
                     role="tabpanel"
                     aria-labelledby="facet-content-accordion-label" id="facet-content-accordion"
                     tabindex="1">
                    <div class="boxes">
                        {% for item in search_result.facets %}
                            <ul class="accordion filter-group" data-accordion="" data-multi-expand="true"
                                data-allow-all-closed="true" role="tablist">
                                <li class="accordion-item is-active" data-accordion-item="">
                                    <a href="#" class="accordion-title" aria-controls="{{ item.id }}-accordion" role="tab"
                                       id="{{ item.id }}-accordion-label" aria-expanded="true" aria-selected="true">
                                        <span class="text">{{ item.label|t }}</span>
                                    </a>
                                    <div class="accordion-content" data-tab-content="" role="tabpanel"
                                         aria-labelledby="{{ item.id }}-accordion-label" id="{{ item.id }}-accordion" aria-hidden="false"
                                         style="display: block;">
                                        <div class="boxes">
                                            {% if item.toggle %}
                                                {% set actionLink = page.find('/search').url ~ '?' %}
                                                {% set queries = uri.query(null, true) %}
                                                {% set queries = queries|merge({
                                                    (item.toggle.id) : item.toggle.active ? '' : item.id
                                                }) %}
                                                {% for key, param in queries %}
                                                    {% set actionLink = actionLink ~ '&' ~ key|url_encode ~ '=' ~ param|url_encode %}
                                                {% endfor %}
                                                <div class="form-element boxed toggle-group">
                                                    <label class="control toggle" title="{{ item.toggle.label.title|t }}">
                                                        <input type="checkbox" onclick="location.href='{{ actionLink }}'" name="{{ item.toggle.id }}"
                                                           {% if item.toggle.active %}
                                                                checked
                                                           {% endif %}
                                                        >
                                                        <span class="toggle-slider round"></span>
                                                    </label>
                                                    <span class="toggle-label checked {% if item.toggle.active is not sameas(true) %}is-hidden{% endif %}">{{ item.toggle.label.on|t }}</span>
                                                    <span class="toggle-label unchecked {% if item.toggle.active %}is-hidden{% endif %}">{{ item.toggle.label.off|t }}</span>
                                                </div>
                                            {% endif %}
                                            {% if item.info  %}
                                            <div class="form-element boxed">
                                                <div class="input-check caption" style="text-align:left;">
                                                    <div class="icon check">
                                                        <span class="ic-ic-info"></span>
                                                        <span>{{ item.info|t }}</span>
                                                    </div>
                                                </div>
                                            </div>
                                            {% endif %}
                                            {% if (item.id == "bbox") %}
                                                {% include 'partials/search/filter/facet_area_map.html.twig' %}
                                            {% else %}
                                                {% set activeListLimit = false %}
                                                {% set itemsSelected = item.items|filter(f => f.value in selected_facets[item.id]) %}
                                                {% set itemsUnselected = item.items|filter(f => f.value not in selected_facets[item.id]) %}
                                                {% for bucket in itemsSelected %}
                                                    <div class="form-element boxed">
                                                        {% set facetId = item.id ~ '-' ~ bucket.value %}
                                                        <a href="{{ base_url }}{{ bucket.actionLink }}" class="input-checkbox" id="facet-{{ facetId }}">
                                                            <div class="input-check">
                                                                <div class="control-group">
                                                                    <label class="control control--checkbox">
                                                                        <span class="control__indicator {% if bucket.value in selected_facets[item.id] %} checked {% endif %}"></span>
                                                                        <span class="nr-results">({{ bucket.docCount }})</span>
                                                                        <span class="text">{{ bucket.label|t }}</span>
                                                                    </label>
                                                                </div>
                                                            </div>
                                                        </a>
                                                    </div>
                                                {% endfor %}
                                                {% if itemsSelected|length > 0 %}
                                                    <hr class="no-margin border-dotted">
                                                {% endif %}
                                                {% for bucket in itemsUnselected %}
                                                    {% if item.listLimit and activeListLimit == false %}
                                                        {% if loop.index > item.listLimit %}
                                                            {% set activeListLimit = true %}
                                                            <div class="accordion " data-accordion="" data-allow-all-closed="true" role="tablist">
                                                                <div class="accordion-item text-right" data-accordion-item="">
                                                                    <div class="text-left" data-tab-content="" role="tabpanel" aria-labelledby="type-accordion-label" id="{{ item.id }}_more" aria-hidden="false" style="display: none;">
                                                        {% endif %}
                                                    {% endif %}
                                                    <div class="form-element boxed">
                                                        {% set facetId = item.id ~ '-' ~ bucket.value %}
                                                        <a href="{{ base_url }}{{ bucket.actionLink }}" class="input-checkbox" id="facet-{{ facetId }}">
                                                            <div class="input-check">
                                                                <div class="control-group">
                                                                    <label class="control control--checkbox">
                                                                        <span class="control__indicator {% if bucket.value in selected_facets[item.id] %} checked {% endif %}"></span>
                                                                        <span class="nr-results">({{ bucket.docCount }})</span>
                                                                        <span class="text">{{ bucket.label|t }}</span>
                                                                    </label>
                                                                </div>
                                                            </div>
                                                        </a>
                                                    </div>
                                                {% endfor %}
                                                {% if activeListLimit == true %}
                                                            </div>
                                                            <a href="#" class="more" aria-controls="{{ item.id }}_more" role="tab" id="{{ item.id }}_more-label" aria-expanded="false" aria-selected="false">
                                                                <div class="helper plus">
                                                                    <span class="ic-ic-plus"></span>
                                                                    <span class="text">{{ "SEARCH_RESULT.FACETE_CATEGORY_PLUS"|t }}</span>
                                                                </div>
                                                                <div class="helper minus">
                                                                    <span class="ic-ic-minus"></span>
                                                                    <span class="text">{{ "SEARCH_RESULT.FACETE_CATEGORY_MINUS"|t }}</span>
                                                                </div>
                                                            </a>
                                                        </div>
                                                    </div>
                                                {% endif %}
                                            {% endif %}
                                        </div>
                                    </div>
                                </li>
                            </ul>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

{% include 'partials/global/side-menu/nicescroll.html.twig' %}

<script>
    function submitForm() {
        document.getElementById('updateFacets').submit();
    }
</script>

