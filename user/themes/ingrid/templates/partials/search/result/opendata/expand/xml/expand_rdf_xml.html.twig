{% set rdf_enabled = theme_var('hit_search.rdf_enabled') %}
{% if rdf_enabled and rdf_url %}
<p class="teaser-links-content">
    <a class="icon external-link" href="{{ rdf_url ~ uuid }}" title="{{ "COMMON.RDF_LINK"|t }}" target="_blank" rel="noopener noreferrer">
        <span class="ic-ic-download"></span>
        <span class="text">{{ "COMMON.RDF_LINK_LABEL"|t }}</span>
    </a>
</p>
{% endif %}