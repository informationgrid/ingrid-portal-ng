{# Beschreibung #}
{% set summary_replace_newline = theme_var('hit_detail.summary_replace_newline') %}

<div class="section">
    <a class="anchor" id="{{ hash_description }}"></a>
    {{ hit_macros.render_title("SEARCH_DETAIL.DETAIL_DESCRIPTION"|t)}}
    <div class="row columns">
    {# Beschreibung #}
        {% if description %}
            {{ hit_macros.render_text_only(removeHashLocale(description)|replace({'\n': summary_replace_newline})|raw, true)}}
        {% endif %}
    {# Zeitbezug #}
        {% if isTimeInDescription %}
            {# Zeitbezug #}
                {% include 'partials/detail/opendata/parts/description/description_time.html.twig' %}
            {# Zeitbezug der Ressource #}
                {% include 'partials/detail/opendata/parts/description/description_time_resource.html.twig' %}
        {% endif %}
    </div>
</div>