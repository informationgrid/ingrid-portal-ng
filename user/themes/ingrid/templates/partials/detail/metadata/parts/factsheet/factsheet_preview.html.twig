{% if hasFactPreview or hasFactMap %}
    <div class="xsmall-24 small-24 medium-10 columns">
        <h4 class="text-center">{{ 'SEARCH_DETAIL.PREVIEW'|t }}</h4>
        {% if not(hasFactPreview) %}
            {% set previews = [{
                url: url('theme://images' ~ '/maps/image_map_' ~ partners[0] ~ '.png'),
                title: 'COMMON.RESULT_SHOWMAP_TOOLTIP_SHORT'|t
            }]
            %}
        {% endif %}
        {{ hit_macros.render_multi_images(previews, partners) }}
        {% if hasFactMap %}
            <p class="caption">
                {% set showMapUrl = page.find('/map').url ~ '?layers=' ~ mapUrl %}
                {% if mapUrlClient %}
                    {% set showMapUrl = mapUrlClient %}
                {% endif %}
                <a target="_blank" class="button small" href="{{ showMapUrl }}" title="{{ 'COMMON.RESULT_SHOWMAP_TOOLTIP_SHORT'|t }}">
                    {{ 'COMMON.RESULT_SHOWMAP_TOOLTIP_SHORT'|t }}
                </a>
            </p>
        {% endif %}
    </div>
{% endif %}