{# Zusatzinformationen #}
{% if infoRefs_additional and infoRefs_additional|length > 0 %}
    <div class="sub-section">
        <a class="anchor" id="{{ hash_info }}_additional_information"></a>
        {{ hit_macros.render_group_title("SEARCH_DETAIL.ADDITIONAL_INFORMATION"|t) }}
    {# Datensatz/Datenserie #}
        {% include 'partials/detail/metadata/parts/information/information_additional_dataset_series.html.twig' ignore missing %}
    {# Veröffentlichung #}
        {% include 'partials/detail/metadata/parts/information/information_additional_publish_id.html.twig' %}
    {# Eignung/Nutzung #}
        {{ hit_macros.render_label_text_row("SEARCH_DETAIL.T01_OBJECT_DATASET_USAGE"|t, infoRefs_additional.usage) }}
    {# Herstellungszweck #}
        {{ hit_macros.render_label_text_row("SEARCH_DETAIL.T01_OBJECT_INFO_NOTE"|t, infoRefs_additional.purpose) }}
    {# Rechtliche Grundlagen #}
        {{ hit_macros.render_label_text_list_row("SEARCH_DETAIL.T015_LEGIST_NAME"|t, infoRefs_additional.legalBasis) }}
    {# XML-Export-Kriterium #}
        {{ hit_macros.render_label_text_list_row("SEARCH_DETAIL.T014_INFO_IMPART_NAME"|t, infoRefs_additional.exportCriteria) }}
    {# Sprache des Datensatzes #}
        {{ hit_macros.render_label_text_list_row("SEARCH_DETAIL.T01_OBJECT_DATA_LANGUAGE"|t, infoRefs_additional.languageCode ? infoRefs_additional.languageCode|sort ) }}
    {# Konformität #}
        {% set header = [
            "SEARCH_DETAIL.OBJECT_CONFORMITY_SPECIFICATION"|t,
            "SEARCH_DETAIL.OBJECT_CONFORMITY_PUBLICATION_DATE"|t,
            "SEARCH_DETAIL.OBJECT_CONFORMITY_DEGREE_VALUE"|t,
            "SEARCH_DETAIL.OBJECT_CONFORMITY_EXPLANATION"|t
        ] %}
        {{ hit_macros.render_table("SEARCH_DETAIL.OBJECT_CONFORMITY"|t, header, infoRefs_additional.conformity, [0]) }}
    {# Datenformat #}
        {% set header = [
            "SEARCH_DETAIL.T0110_AVAIL_FORMAT_NAME"|t,
            "SEARCH_DETAIL.T0110_AVAIL_FORMAT_VERSION"|t,
            "SEARCH_DETAIL.T0110_AVAIL_FORMAT_FILE_DECOMPRESSION_TECHNIQUE"|t,
            "SEARCH_DETAIL.T0110_AVAIL_FORMAT_SPECIFICATION"|t
        ] %}
        {{ hit_macros.render_table("SEARCH_DETAIL.DATA_FORMAT"|t, header, infoRefs_additional.dataformat) }}
    {# Geodatenlink #}
        {% include 'partials/detail/metadata/parts/information/information_additional_geodaten_link.html.twig' ignore missing %}
    {# Medien #}
        {% set header = [
            "SEARCH_DETAIL.T0112_MEDIA_OPTION_MEDIUM_NAME"|t,
            "SEARCH_DETAIL.T0112_MEDIA_OPTION_TRANSFER_SIZE"|t,
            "SEARCH_DETAIL.T0112_MEDIA_OPTION_MEDIUM_NOTE"|t
        ] %}
        {{ hit_macros.render_table("SEARCH_DETAIL.T0112_MEDIA_OPTION_MEDIUM"|t, header, infoRefs_additional.media) }}
    {# Bestellinformationen #}
        {{ hit_macros.render_label_text_row("SEARCH_DETAIL.T01_OBJECT_ORDERING_INSTRUCTIONS"|t, infoRefs_additional.orderInstructions) }}
    </div>
{% endif %}