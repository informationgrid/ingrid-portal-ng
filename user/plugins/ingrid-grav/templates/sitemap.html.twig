{% extends 'partials/base.html.twig' %}

{% block content %}
    {% set menu_site = theme_var('menu.site') %}
    <div class="search-filtered row content-small">
        <div class="columns">
            <div class="sitemap">
                {% if menu_site %}
                    <h4>{{ "SITEMAP.AREA_MAIN"|t|e }}</h4>
                    <div class="link-list">
                        {% for entry in menu_site %}
                            {% if entry.highlighted is sameas(true) %}
                                {% set p = pages.find(entry.path) %}
                                {% if p and p.visible %}
                                    {% set page_active = (p.active or p.activeChild) ? 'is-selected' : '' %}
                                    {% set page_url = p.url %}
                                    {% set page_title = p.header.custom_title.html ?? p.title  %}
                                    {% set page_menu_title = p.header.custom_title.menu ?? p.title %}
                                    {% if page_url %}
                                        <a class="icon" href="{{ page_url|e }}" title="{{ page_menu_title|t|e }}">
                                            <span class="ic-ic-arrow-right"></span>
                                            <span class="text">{{ page_title|t|e }}</span>
                                        </a>
                                    {% endif %}
                                {% endif %}
                            {% endif %}
                        {% endfor %}
                    </div>
                    <h4>{{ "SITEMAP.AREA_FOOTER"|t|e }}</h4>
                    <div class="link-list">
                        {% for entry in menu_site %}
                            {% if entry.highlighted is sameas(false) %}
                                {% set p = pages.find(entry.path) %}
                                {% if p and p.visible %}
                                    {% set page_active = (p.active or p.activeChild) ? 'is-selected' : '' %}
                                    {% set page_url = p.url %}
                                    {% set page_title = p.header.custom_title.html ?? p.title  %}
                                    {% set page_menu_title = p.header.custom_title.menu ?? p.title %}
                                    {% if page_url %}
                                        <a class="icon" href="{{ page_url|e }}" title="{{ page_menu_title|t }}">
                                            <span class="ic-ic-arrow-right"></span>
                                            <span class="text">{{ page_title|t|e }}</span>
                                        </a>
                                    {% endif %}
                                {% endif %}
                            {% endif %}
                        {% endfor %}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
